
{% extends 'base.html.twig' %}

{% block title 'Agence de cacaveli' %}

{% block body %}
    <div class="jumbotron text-center">
        <h1>Agence de cacavéli</h1>
        <p>Nous sommes une agence spécialisée dans la construction et la vente des batiments</p>
    </div>

    <div class="container">
        <h2>Les derniers biens</h2>
        <div class="row flex">
            {% for property in properties %}
                <div class="col-3 mt-4">
                    <di class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('property.show', {id:property.id, slug:property.slug}) }}">{{ property.title }}</a>
                            </h5>
                            <p class="card-text">{{ property.city }} ({{ property.postalCode }})</p>
                            <div class="text-primary" style="font-weight: bold;font-size: 2rem;">{{ property.getFormattedPrice()}} €</div>
                        </div>
                    </di>
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}